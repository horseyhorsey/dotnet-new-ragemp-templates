{
    "$schema": "http://json.schemastore.org/template",
    "author": "Dave Horsefield",
    "description" : "This template creates a RAGE-MP server resource defaulted to netcoreapp2.0. 
    	The settings.xml is linked to the project for easy access to add the resource.",
    "classifications": [ "RageMp", "Server" ],
    "groupIdentity": "RageMpServer",
    "identity": "RAGEmpServer",        
    "name": "RAGEMP - Server Side Resource csproj",
    "shortName": "rage-serverproj",
    "symbols": {


      "ragemp":{
        "description": "The RAGEMP install path. (USE / for path seperator)",
        "type":"parameter",
        "datatype" : "text",
        "isRequired" : false,
        "defaultValue": "C:/RAGEMP/",
        "replaces": "ragempinstallpath"
      },
    "description":{
      "type" : "parameter",
      "datatype" : "text",
      "description": "Server Meta data description meta.xml",
      "defaultValue" : "Script meta description generated by horse",
      "replaces" : "metadescription",
      "isRequired" : false,
      },      

      "framework":{
        "description": "The target framework for the project.",
        "type":"parameter",
        "datatype": "choice",
        "defaultValue":"netcoreapp2.2",        
        "choices": [
          {
              "choice": "netcoreapp2.0",
              "description": "Target netcoreapp2.0"
          },
          {
              "choice": "netcoreapp2.1",
              "description": "Target netcoreapp2.1"
          },
          {
              "choice": "netcoreapp2.2",
              "description": "Target netcoreapp2.2"
          },          {
              "choice": "netcoreapp3.0",
              "description": "Target netcoreapp3.0"
          },
        ],
        "replaces":"netcoreapp2.0"
      },
      "scriptType":{
        "description": "The type of script.",
        "type":"parameter",
        "datatype": "choice",
        "defaultValue":"script",        
        "choices": [
          {
              "choice": "gamemode",
              "description": "project meta.xml type is a gamemode"
          },
          {
              "choice": "script",
              "description": "project meta.xml type is script"
          }
        ]}},    
    "sources": 
    [{
      "source": "./",
      "target": "./",
      "exclude": [
        ".template.config/**"]}
    ],
    "tags": {
        "language": "[C#]",
        "type": "project"
        },    
    "sourceName": "Company.RageMpServerResource",
    "preferNameDirectory": true    
        },    
    "primaryOutputs": [
        {
          "path": "Company.RageMpServerResource.csproj"
        }
    ]
}